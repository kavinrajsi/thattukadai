<article class="card card--page">
  <h3 class="card__title">
    <a href="{{ page.url }}">{{ page.title }}</a>
  </h3>
  <p class="card__excerpt">{{ page.content | strip_html | truncate: 120 }}</p>
  <a class="card__link" href="{{ page.url }}">View page</a>
</article>

<style>
  .card--page {
    padding: 0.9rem;
  }
  .card--page .card__title {
    margin: 0 0 0.25rem;
    font-size: 1rem;
  }
</style>

<article class="card card--article">
  <h3 class="card__title">
    <a href="{{ article.url }}">{{ article.title }}</a>
  </h3>
  <p class="card__excerpt">{{ article.excerpt_or_content | strip_html | truncate: 120 }}</p>
  <a class="card__link" href="{{ article.url }}">Read more</a>
</article>

<style>
  .card--article {
    padding: 0.9rem;
  }
  .card--article .card__title {
    margin: 0 0 0.25rem;
    font-size: 1rem;
  }
  .card--article .card__link {
    display: inline-block;
    margin-top: 0.4rem;
  }
</style>

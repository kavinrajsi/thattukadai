{% comment %}
  Renders a single Product Feature metaobject entry.
  Fields expected:
  - icon (file/image)
  - title (single line text)
  - subtitle (optional)
{% endcomment %}

<section class="mo-feature">
  <div class="mo-feature__wrap">
    {% if metaobject.icon %}
      <img
        src="{{ metaobject.icon | image_url: width: 120 }}"
        alt="{{ metaobject.title.value | escape }}"
        class="mo-feature__icon"
        loading="lazy"
      >
    {% endif %}

    <h2 class="mo-feature__title">{{ metaobject.title.value }}</h2>

    {% if metaobject.subtitle and metaobject.subtitle.value != blank %}
      <p class="mo-feature__subtitle">{{ metaobject.subtitle.value }}</p>
    {% endif %}
  </div>
</section>

<style>
  .mo-feature__wrap {
    text-align: center;
    max-width: 240px;
    margin: 0 auto;
  }
  .mo-feature__icon {
    display: block;
    margin: 0 auto 12px;
    background: #ffd966;
    border-radius: 50%;
    padding: 16px;
  }
  .mo-feature__title {
    margin: 0 0 4px;
    font-weight: 600;
  }
  .mo-feature__subtitle {
    margin: 0;
    color: #6b7280;
    font-size: 0.9rem;
  }
</style>

<div
  class="product-drawer"
  id="product-drawer"
  aria-hidden="true"
  role="dialog"
  aria-modal="true"
  aria-label="Product options"
>
  <!-- Overlay (click to close) -->
  <div class="product-drawer__overlay" data-drawer-close></div>

  <!-- Panel -->
  <div class="product-drawer__panel" tabindex="-1">
    <button
      class="product-drawer__close-btn"
      type="button"
      aria-label="Close"
      data-drawer-close
    >
      ×
    </button>

    <div class="product-drawer__body">
      <!-- Details -->
      <div class="product-drawer__details">
        <!-- Title -->
        <h3 class="product-drawer__title"></h3>

        <!-- Price -->
        <div class="product-drawer__price" aria-live="polite"></div>

        <!-- Media -->
        <div class="product-drawer__media">
          <img class="product-drawer__image" alt="" hidden>
        </div>

        <!-- Description -->
        <div class="product-drawer__desc"></div>

        <!-- Variants -->
        <div class="product-drawer__variants" hidden>
          <div class="product-drawer__size-label">Size</div>
          <div class="product-drawer__size-group" role="radiogroup" aria-label="Size options"></div>
        </div>

        <!-- Quantity -->
        <div class="product-drawer__quantity">
          <div class="product-qty" data-qty-inited="true">
            <label for="product-drawer-qty-input">Quantity</label>
            <div class="qty-wrapper qty-changer">
              <button
                type="button"
                class="qty-btn qty-minus qty-decrease minus-btn product-drawer__qty-btn"
                data-qty="decr"
                aria-label="Decrease quantity"
              >
                −
              </button>
              <input
                id="product-drawer-qty-input"
                class="qty-input cart-qty-input quantity-input product-drawer__qty-input"
                type="number"
                name="quantity"
                min="1"
                value="1"
                inputmode="numeric"
                aria-label="Quantity"
              >
              <button
                type="button"
                class="qty-btn qty-increase qty-plus plus-btn product-drawer__qty-btn"
                data-qty="incr"
                aria-label="Increase quantity"
              >
                +
              </button>
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div class="product-drawer__actions">
          <button type="button" class="product-drawer__add">Add to cart</button>
          <a class="product-drawer__view" target="_self" rel="nofollow">View details</a>
        </div>

        <!-- Status / errors -->
        <div class="product-drawer__note" aria-live="polite"></div>
      </div>
    </div>
  </div>
</div>

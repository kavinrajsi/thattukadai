<section class="container">
  <h1>{{ 'general.search' | t }}</h1>
  <form action="/search" method="get" role="search">
    <input type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'sections.header.search_placeholder' | t }}">
    <button class="btn" type="submit">Search</button>
  </form>
  {% if search.performed %}
    <div class="grid" style="margin-top:1rem">
      {% for item in search.results %}
        <a class="product-card" href="{{ item.url }}">
          {% if item.featured_image %}
            <img src="{{ item.featured_image | img_url: '400x' }}" alt="{{ item.title | escape }}">
          {% endif %}
          <div class="title">{{ item.title }}</div>
          {% if item.price %}<div class="price">{{ item.price | money }}</div>{% endif %}
        </a>
      {% else %}
        <p>No results.</p>
      {% endfor %}
    </div>
  {% endif %}
</section>
{% schema %}
{"name":"Main search","settings":[]}
{% endschema %}

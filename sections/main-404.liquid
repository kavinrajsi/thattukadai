      "type": "quick_link",
      "name": "Quick link",
      "settings": [
        {
          "type": "text",
          "id": "link_label",
          "label": "Link text",
          "default": "Shop the latest"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "404 layout",
      "blocks": [
        {
          "type": "quick_link"
        },
        {
          "type": "quick_link"
        }
      ]
    }
  ]
}
